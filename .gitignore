// um array para armazenar os nomes
let amigos = [];

//funcao para adicionar amigos
function adicionarAmigo() {
    let inputAmigo = document.getElementById("amigo");
    let nomeAmigo = inputAmigo.value;

    //inseri o nome obrigatorio
    if (nomeAmigo == "") {
        alert("Por Favor, insira um nome")
        return;
    }

    if(amigos.includes(nomeAmigo)){
        return adicionarAmigo();
    }
    

    amigos.push(nomeAmigo)
    inputAmigo.value = "";
    inputAmigo.focus(); //pesquisa conceito
    listaDeNomesSorteados()


    function listaDeNomesSorteados () {
        let listaAmigos = document.getElementById("listaAmigos");
        listaAmigos.innerHTML = "";

        for(let i = 0; i < amigos.length; i++){
            let item = document.createElement("li"); //pesquisar o conceito
            item.textContent = amigos[i];
            listaAmigos.appendChild(item); //pesquisa o conceito
        }
    }

